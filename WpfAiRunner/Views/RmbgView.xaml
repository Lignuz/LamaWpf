<UserControl x:Class="WpfAiRunner.Views.RmbgView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <DrawingBrush x:Key="CheckerboardBrush" TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#FFFFFF">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,20,20" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="#CCCCCC">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="0,0,10,10" />
                                <RectangleGeometry Rect="10,10,10,10" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="10">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="BtnLoadModel" Content="Load RMBG-1.4" Width="120" Margin="0,0,10,0" Click="BtnLoadModel_Click"/>
                <CheckBox x:Name="ChkUseGpu" Content="Use GPU" VerticalAlignment="Center" Margin="0,0,10,0" Click="ChkUseGpu_Click"/>
                <Button x:Name="BtnOpenImage" Content="Open Image" Width="100" Margin="0,0,10,0" IsEnabled="False" Click="BtnOpenImage_Click"/>
                <Button x:Name="BtnRun" Content="Run" Width="80" Margin="0,0,10,0" IsEnabled="False" Click="BtnRun_Click"/>
                <Button x:Name="BtnSave" Content="Save" Width="80" Margin="0,0,10,0" IsEnabled="False" Click="BtnSave_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Threshold:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#CCC"/>
                <Slider x:Name="SldThreshold" Width="150" Minimum="0" Maximum="1" Value="0" SmallChange="0.1" LargeChange="0.2" VerticalAlignment="Center" Margin="0,0,20,0"/>

                <TextBlock Text="Background:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#CCC"/>
                <ComboBox x:Name="CboBackground" Width="100" SelectedIndex="0" VerticalAlignment="Center">
                    <ComboBoxItem Content="Transparent"/>
                    <ComboBoxItem Content="White"/>
                    <ComboBoxItem Content="Black"/>
                    <ComboBoxItem Content="Green (Chroma)"/>
                    <ComboBoxItem Content="Blue"/>
                </ComboBox>
            </StackPanel>

            <TextBlock x:Name="TxtStatus" Text="Ready" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#AAA"/>
        </DockPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#333" BorderThickness="1" Margin="0,0,5,0">
                <Grid>
                    <Image x:Name="ImgInput" Stretch="Uniform"/>
                    <TextBlock Text="Original" Foreground="White" Background="#88000000" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="5"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" BorderBrush="#333" BorderThickness="1" Margin="5,0,0,0" Background="{StaticResource CheckerboardBrush}">
                <Grid>
                    <Image x:Name="ImgOutput" Stretch="Uniform"/>
                    <TextBlock Text="Background Removed" Foreground="White" Background="#88000000" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="5"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>